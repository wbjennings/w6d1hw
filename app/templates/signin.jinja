{% extends 'base.jinja' %}

{% block content %}
<form action="" method="post">
    <h3>Sign In</h3>
    {{ form.hidden_tag() }}
        <p>
            {{ form.username.label }}<br>
            {{ form.username(size=32) }}
        </p>
        <p>
            {{ form.password.label }}<br>
            {{ form.password(size=32) }}
        </p>
        <p>
            {{ form.submit() }}
        </p>
</form>
{% endblock content %}